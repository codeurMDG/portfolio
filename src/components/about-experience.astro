---
const { dates, role, company, description,link } = Astro.props;
---

<div class="relative flex flex-col justify-start pl-12">
  <div
    class="absolute top-0 left-0 z-40 flex items-center justify-center -translate-x-1/2 bg-white border rounded-full dark:bg-neutral-950 w-4 h-4 border-neutral-300 dark:border-neutral-700 text-sm"
  >
  </div>

  <p
    class="text-xs uppercase text-neutral-600 dark:text-neutral-500 tracking-widest"
  >
    {dates}
  </p>
  <h3 class="my-1 text-lg font-bold dark:text-neutral-100">{role}</h3>
  <p class="mb-1 text-sm font-medium dark:text-neutral-300">
    <a href={link} target="_blank" rel="noopener noreferrer" class="text-neutral-900 dark:text-neutral-100 hover:underline">
        {company}
    </a>
  </p>
  <p class="text-sm font-light text-neutral-800 dark:text-neutral-400">
    {description}
  </p>
</div>
